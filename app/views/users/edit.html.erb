
<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h3><%= @user.errors.count %>errors prohibited this obj from being saved</h3>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </div>
          <% end %>

        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>

          <div class="form-group">
            <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name" %>
          </div>

          <div class="form-group">
            <%= f.label :Image %>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>

          <div class="form-group">
            <%= f.label :Introduction %>
            <%= f.text_field :introduction,  autofocus: true, id:"inputIntroduction", placeholder:"iplaceholder" %>
          </div>

          <div class="form-group">
            <%= f.submit "Update User" %>
          </div>
      <% end %>
    </div>
  </div>
  </div>
</main>