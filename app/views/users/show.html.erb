<main>
 <%= render 'books/list', user: @user, book: @book %>


        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <div class="container">
            <div class="row">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                  </tr>
                  <tbody>
                  <% @books.each do |book| %>


                    <tr>
                      <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", format: '(jpeg)', size:'30x30' %></td>
                      <td><%= link_to book.title, book_path(book) %></td>
                      <td><%= book.body %></td>
                    </tr>
                  <% end %>
                  </tbody>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>