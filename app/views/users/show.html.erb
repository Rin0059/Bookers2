<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li><%= link_to "Home", user_path(current_user.id), class: "fas fa-home nav-link text-light" %></li>
          <li><%= link_to "Users", users_path(current_user), class: "fas fa-users nav-link text-light" %></li>
          <li><%= link_to "Books", books_path, class: "fas fa-book-open nav-link text-light" %></li>
          <li><%= link_to "logout", root_path, class: "fas fa-sign-out-alt nav-link text-light" %></li>
        </ul>
      </div>
    </div>
  </nav>
</header>


<main>
  <p id="notice">Signed in successfully.</p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <div class="container">  <!-- この行を追加 -->
          <div class="row">
            <img class="attachment user profile_image fallback" src="/assets/no_image.jpg"><table class="table">
              <table class="table table-striped">
                <tbody>
                  <tr></tr>
                  <tr>
                    <th>name</th>
                    <div class="profile-container">
                      <th class="profile-name"><%= @user.name %></th>
                    </div>
                  </tr>

                  <tr>
                    <th>introduction</th>
                    <th></th>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>


          <div class="row">
            <% if @user == current_user %>
            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
            <% end %>
          </div>


          <h2 class="mt-3">New book</h2>
          <form action="/books" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="9vr3a/T8fUz73QXVY1f2yEykNS2sbw2xGj/5GTxZp2ztj3ghMNoR2tLl+SxwER4sPsmwbI19XLy/9V1cFne5Dg==">
            <div class="form-group">
              <%= form_with model:@book, local:true do |f| %>
              <label for="book_title">Title</label>
              <%= f.text_field :title %>
            </div>


            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body %>
            </div>

            <div class="form-group">
              <%= f.submit 'submit' %>
              <% end %>
            </div>
          </from>
        </div>


        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <div class="container">
            <div class="row">
              <table class="table table-striped">
                <thead>
                  <% @books.each do |book| %>
                  <%= link_to user_path(@user.id) do %></th>
                  <% end %>
                  <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                  </tr>

                  <tr>
                    <th><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", format: '(jpeg)', size:'40x40' %></th>
                    <td><%= book.title %></td>
                    <td><%= book.body%></td>
                  </tr>
                <% end %>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>



<footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
