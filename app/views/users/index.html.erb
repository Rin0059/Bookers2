<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li><%= link_to "Home", user_path(current_user.id), class: "fas fa-home nav-link text-light" %></li>
          <li><%= link_to "Users", users_path(current_user), class: "fas fa-users nav-link text-light" %></li>
          <li><%= link_to "Books", books_path, class: "fas fa-book-open nav-link text-light" %></li>
          <li><%= link_to "logout", root_path, class: "fas fa-sign-out-alt nav-link text-light" %></li>
        </ul>
      </div>
    </div>
  </nav>
</header>


<main>
  <p id="notice">Signed in successfully.</p>
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <img class="attachment user profile_image fallback" src="/assets/no_image.jpg"><table class="table">
          <table class="table table-striped">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <div class="profile-container">
                  <th class="profile-name"><%= @user.name %></th>
                </div>
              </tr>

              <tr>
                <th>introduction</th>
                <th></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <% if @user.id == current_user.id %>
            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
            <% end %>
          </div>

          <h2 class="mt-3">New book</h2>
          <form action="/books" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="9vr3a/T8fUz73QXVY1f2yEykNS2sbw2xGj/5GTxZp2ztj3ghMNoR2tLl+SxwER4sPsmwbI19XLy/9V1cFne5Dg==">
            <div class="form-group">
             <%= form_with model:@book, local:true do |f| %>
             <label for="book_title">Title</label>
             <%= f.text_field :taile %>
            </div>


            <div class="form-group">
             <label for="book_opinion">Opinion</label>
             <%= f.text_area :body %>
            </div>

            <div class="form-group">
             <%= f.submit 'submit' %>
             <% end %>
            </div>
          </from>
        </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <div class="col-md-3">      <!-- この行を追加 -->
          <table class="table table-striped">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
              <tr>
                <td><img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg"></td>
                <td><%= @users.name %></td>
                <th><%= link_to "show", user_path(@user.id) %></th>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</main>