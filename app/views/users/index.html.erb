<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <div class="container">  <!-- この行を追加 -->
          <div class="row">
            <img class="attachment user profile_image fallback" src="/assets/no_image.jpg"><table class="table">
              <table class="table table-striped">
                <tbody>
                  <tr></tr>
                  <tr>
                    <th>name</th>
                    <div class="profile-container">
                      <th class="profile-name"><%= @user.name %></th>
                    </div>
                  </tr>

                  <tr>
                    <th>introduction</th>
                    <th></th>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

              <div class="row">
                <% if @user.id == current_user.id %>
                <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
                <% end %>
              </div>

              <h2 class="mt-3">New book</h2>

              <form action="/books" accept-charset="UTF-8" method="post">
                <input name="utf8" type="hidden" value="✓">
                <input type="hidden" name="authenticity_token" value="9vr3a/T8fUz73QXVY1f2yEykNS2sbw2xGj/5GTxZp2ztj3ghMNoR2tLl+SxwER4sPsmwbI19XLy/9V1cFne5Dg==">

                <div class="form-group">
                 <%= form_with model:@book, local:true do |f| %>
                 <label for="book_title">Title</label>
                 <%= f.text_field :taile %>
                </div>


                <div class="form-group">
                 <label for="book_opinion">Opinion</label>
                 <%= f.text_area :body %>
                </div>

                <div class="form-group">
                 <%= f.submit 'Create Book' %>
                </div>
                <% end %>
              </from>
            </div>

            <div class="col-md-8 offset-md-1">
              <h2>Users</h2>
              <div class="container">
              <div class="row">
                 <table class="table table-striped">
                   <thead>
                    <tr>
                      <th></th>
                      <th>image</th>
                      <th>name</th>
                      <th colspan="3"></th>
                    </tr>
                    <tr>
                      <th><img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg"></th>
                      <td><%= @users.name %></td>
                      <th><%= link_to "show", user_path(@user.id) %></th>
                    </tr>

                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>