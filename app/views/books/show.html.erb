
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3><%= @book.errors.count %>errors prohibited this obj from being saved</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<main>
  <%= render 'books/list', user: @user, book: @book_new %>

        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <div class="container">
            <div class="row">
              <table class="table table-striped">
              <thead>
                 <tr>
                  <th><%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", format: '(jpeg)', size:'30x30' %>
                    <br><%= link_to (@user.name),user_path(@user) %>
                  </th>
                  <td><%= link_to @book.title %></td>
                  <td><%= @book.body %></td>
                  <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
                  <td><%= link_to "Destroy", @book, method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger destroy"%></td>
                </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>

