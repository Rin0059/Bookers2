
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <div class="container">
          <div class="row">
            <img class="attachment user profile_image fallback" src="/assets/no_image.jpg"><table class="table">
              <table class="table table-striped">
                <tbody>
                  <tr></tr>
                  <tr>
                    <th>name</th>
                    <div class="profile-container">
                      <th class="profile-name"><%= @user.name %></th>
                    </div>
                  </tr>

                  <tr>
                    <th>introduction</th>
                    <th><%= @user.introduction %></th>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <div class="row">
            <% if @user == current_user %>
            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
            <% end %>
          </div>

          <h2 class="mt-3">New book</h2>
          <form action="/books" accept-charset="UTF-8" method="post">
            <input name="utf8" type="hidden" value="✓">
            <input type="hidden" name="authenticity_token" value="9vr3a/T8fUz73QXVY1f2yEykNS2sbw2xGj/5GTxZp2ztj3ghMNoR2tLl+SxwER4sPsmwbI19XLy/9V1cFne5Dg==">
            <div class="form-group">
              <%= form_with model:@book_new, local:true do |f| %>
              <label for="book_title">Title</label>
              <%= f.text_field :title %>
            </div>


            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body %>
            </div>

            <div class="form-group">
              <%= f.submit 'Create Book', class: "btn btn-success" %>
            </div>
            <% end %>
          </from>
        </div>


        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <div class="container">
            <div class="row">
              <table class="table table-striped">
              <thead>
                 <tr>
                  <th><%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", format: '(jpeg)', size:'30x30' %>
                    <br><%= link_to (@user.name),user_path(@user) %>
                  </th>
                  <td><%= @book.title %></td>
                  <td><%= @book.body%></td>
                  <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
                  <td><%= link_to "Destroy", @book, method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger destroy"%></td>
                </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>

