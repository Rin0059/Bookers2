<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3><%= @book.errors.count %>errors prohibited this obj from being saved</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <div class="container">
          <div class="row">
            <img class="attachment user profile_image fallback" src="/assets/no_image.jpg"><table class="table">
              <table class="table table-striped">
                <tbody>
                  <tr></tr>
                  <tr>
                    <th>name</th>
                    <div class="profile-container">
                      <th class="profile-name"><%= @user.name %></th>
                    </div>
                  </tr>

                  <tr>
                    <th>introduction</th>
                    <th><%= @user.introduction %></th>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <div class="row">
            <% if @user == current_user %>
            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
            <% end %>
          </div>

          <h2 class="mt-3">New book</h2>
              <%= form_with model: @book, local:true do |f| %>
                <div class="form-group">
                  <%= f.text_field :title %>
                </div>

                <div class="form-group">
                  <%= f.text_area :body %>
                </div>

                <div class="form-group">
                  <%= f.submit 'Create Book' %>
                </div>
              <% end %>
        </div>


        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <div class="container">
            <div class="row">
              <table class="table table-striped">
              <thead>
                <% @books.each do |book| %>
                <th><%= link_to user_path(@user.id) do %></th>
                <% end %>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                </tr>

                <tr>
                  <th><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", format: '(jpeg)', size:'30x30' %></th>
                  <td><%= link_to book.title, book_path(book) %></td>
                  <td><%= book.body%></td>
                  <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "本当に消しますか？" } %></td>
                </tr>
              <% end %>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>